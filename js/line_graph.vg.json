{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Australia's Total Energy Consumption Overview",
    "data": {
      "url": "https://raw.githubusercontent.com/JannaKung/FIT-3179-Homework-Week-10/refs/heads/main/data/End_use_of_industries.csv",
      "format": {"type": "csv"}
    },
    "selection": {
      "sector_highlight": {
        "type": "multi",
        "fields": ["Energy Consumption Sectors"],
        "bind": "legend"
      }
    },
    "mark": {
      "type": "line",
      "point": true
    },
    "encoding": {
      "x": {
        "field": "Year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      "y": {
        "field": "Energy Consumption (PJ)",
        "type": "quantitative",
        "title": "Energy Consumption (PJ)"
      },
      "color": {
        "field": "Energy Consumption Sectors",
        "type": "nominal",
        "title": "Sector"
      },
      "opacity": {
        "condition": {
          "selection": "sector_highlight",
          "value": 0.8
        },
        "value": 0.2
      },
      "tooltip": [
        {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
        {"field": "Energy Consumption Sectors", "type": "nominal", "title": "Sector"},
        {"field": "Energy Consumption (PJ)", "type": "quantitative", "title": "Energy Consumption (PJ)"}
      ]
    }
  }
